

<%#= link_to "Log-In", login_path %> <%#= link_to "sign-up", new_user_path %>


<div class="container">
  <div class="row">
    <% @reviews.each do |r| %>
    <div class="col-md-12">
    <div class="card">
        <div class="hero">
          <h2><%= r.restaurant['name']%></h2>
          <img class="image-post" src= "<%=r.restaurant['picture']%>" alt=""><br>
          <%=p r.restaurant['address']%><br>
          <%= r.restaurant['price_range']%><br><br>
        </div>

        <!--  <%#=r.restaurant['res_type']%><br> -->
        <!-- Phone: <%#= r.restaurant['phone_number']%><br> -->
        <div class="info">
          <span><b><%= r.title.capitalize %></b></span><br>
          <span><b>Role</b></span><br>
          <%= r.role %><br>
          <span><b>Clientele</b></span><br>
          <% r.clientele.times do %>
          <span class="star"></span>
          <% end %><br>
          <span><b>Team</b></span><br>
          <% r.team.times do %>
          <span class="star"></span>
          <%  end %> <br>
          <span><b>Management</b></span><br>
          <% r.management.times do %>
          <span class="star"></span>
          <% end %><br>
      <!-- <span><b>Details</b></span><br>
        <%#= r.more_details %><br> -->
      <!-- <span><b>Shift</b></span><br>
        <%#= r.shift_description %><br> -->
        <span><b>Tip Avg: </b></span>
        <%= r.tip_avg%>/hr<br>
        <span><b>Overall Rating</b></span><br>
        <% r.rating.times do  %>
        <span class="star"></span>
        <% end %>
        <br>
        <% if logged_in? %>

        <% if @user.voted_for? r %>

        <%= link_to "Tips", unlike_page_path(r),  class: "likes", method: :put %>  <%=r.get_upvotes.size %>
        <%#= link_to "un-dislike:", undislike_page_path(r) %>
        <% else %>
        <%= link_to "Tip:", like_page_path(r), method: :put %> <%=r.get_upvotes.size %>

        <%#= link_to "dislike:", dislike_page_path(r)%> <%#= r.get_downvotes.size %>

        <% end %><br><br>
        <% else %>
        <% end %>
      </div>
    </div>
  </div>

  <% end %>
</div>
</div>

