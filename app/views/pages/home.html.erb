

<%#= link_to "Log-In", login_path %> <%#= link_to "sign-up", new_user_path %>


<div class="container">
  <div class="row">
    <% @reviews.each do |r| %>
    <div class="col-md-12">
    <div class="card">
        <div class="hero">
          <h2><%= r.restaurant['name']%></h2>
          <img class="image-post" src= "<%=r.restaurant['picture']%>" alt=""><br>
          <span><%= r.restaurant['address']%></span><br>
          <span><%= r.restaurant['price_range']%></span><br><br>
        </div>

        <!--  <%#=r.restaurant['res_type']%><br> -->
        <!-- Phone: <%#= r.restaurant['phone_number']%><br> -->
        <div class="info">
          <span class="rtitle"><b><%= r.title.capitalize %></b></span><br>
          <span><b>Role</b></span><br>
          <%= r.role %><br>
          <span><b>Clientele</b></span><br>
          <% r.clientele.times do %>
          <span class="star"></span>
          <% end %><br>
          <span><b>Team</b></span><br>
          <% r.team.times do %>
          <span class="star"></span>
          <%  end %> <br>
          <span><b>Management</b></span><br>
          <% r.management.times do %>
          <span class="star"></span>
          <% end %><br>
      <!-- <span><b>Details</b></span><br>
        <%#= r.more_details %><br> -->
      <!-- <span><b>Shift</b></span><br>
        <%#= r.shift_description %><br> -->
        <span><b>Tip Avg: </b></span>
        <%= r.tip_avg%>/hr<br>
        <span><b>Overall Rating</b></span><br>
        <% r.rating.times do  %>
        <span class="star"></span>
        <% end %>
        <br>
        <% if logged_in? %>

        <% if @user.voted_for? r %>

        <span class="tips"><%= link_to "#{r.get_upvotes.size}", unlike_page_path(r),  class: "likes", id: "#{r.id}", method: :put, remote: true %></span>
       <!--   <span ><%=r.get_upvotes.size %></span> -->

        <% else %>
       <span class="tips"> <%= link_to "#{r.get_upvotes.size}", like_page_path(r), class: "likes", id:"#{r.id}", method: :put,remote: true %></span>
       <!-- <span id="uplike"> <%#=r.get_upvotes.size %> <span> -->


        <% end %><br><br>
        <% else %>
        <% end %>
      </div>
    </div>
  </div>

  <% end %>
</div>
</div>


