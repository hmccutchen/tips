<h2 class="auth-title">Forgot your password?</h2>

<main class="container log-in-form">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<% if devise_error_messages!.present? %><div class="alert alert-info"><%= devise_error_messages!%></div><% end %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Enter Email", autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Reset password " %>
  </div>
<% end %>
</main>

<%= render "devise/shared/links" %>

