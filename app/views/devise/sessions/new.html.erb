<h2 class="auth-title">Log in</h2>

<main class="container log-in-form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field container form-con">
    <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field container form-con">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password" %>
  </div>


  <% if devise_mapping.rememberable? -%>
    <div class="field container form-con log-in-form">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "remember-me" %>
    </div>
  <% end %>

  <div class="actions container form-con">
    <%= f.submit "Log in" %>
  </div>
<% end %>
</main>
<%= render "devise/shared/links" %>
