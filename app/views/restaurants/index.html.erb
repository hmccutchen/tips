
<div class="color">
  <div class="search-bar">
    <img src="search.png" alt="&">
    <%= render 'search' %><br>
  </div>


  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="search-res">
         <% @restaurants.shuffle.each do |restaurant| %>
         <h2><%= link_to "#{restaurant.name}", restaurant %></h2>
         <a href="restaurants/<%= restaurant.id %>"><img class="image-post" src="<%= restaurant.picture  %>" alt=""></a> <br>
         <span><%=p restaurant.address %></span><br>
         <span><%= restaurant.res_type   %></span><br>
         <span><%= restaurant.phone_number %></span><br>
         <span><%= restaurant.price_range %></span><br>
         <span><%= restaurant.hours %><br></span>
         <% end %>
       </div>
     </div>
   </div>
 </div>
</div>
