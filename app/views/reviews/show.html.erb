
<% @reviews.each do |review| %>
 <h2><%= review.restaurant.name %></h2>
 <p><%= review.restaurant.address %></p>
 <span>Clientele: </span>
 <% review.clientele.times do %>
    <span class="star"> </span>
    <% end %><br>
    <span>Management: </span>
  <% review.management.times do %>
    <span class="star"></span>
    <% end %><br>
    <span>Team: </span>
 <% review.team.times do %>
 <span class="star"></span>
 <% end %><br>
 <% if review.more_details.present? %>
 <span>Details: </span>
 <% end %>
 <span><%= review.more_details %></span><br>
 <span><%= review.shift_description %></span><br>
 <span>Rating: </span>
 <% review.rating.times do %>
 <span class="star"></span>
 <% end %><br>
 <% end %>
